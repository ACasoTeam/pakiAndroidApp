<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="acasoteam.pakistapp.FeedActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/feedTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/places_ic_clear"
                android:layout_centerVertical="true"
                android:onClick="close"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Via le mani dal Naso, 100000000000000000000"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:layout_weight="1.0"
                android:maxLines="1"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUBBLICA"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"/>

        </LinearLayout>



<!--
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tune_white_24dp"
            android:background="@drawable/imagebutton_background"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/> -->

    </android.support.v7.widget.Toolbar>


    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="0"/>

    <EditText
        android:id="@+id/fname"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Racconta a tutti la tua esperienza..."
        />

</LinearLayout>
